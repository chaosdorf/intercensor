<Macro ChallengeVHost $id $name>
    Listen 192.168.$id.1:80

    <VirtualHost 192.168.$id.1:80>
        DocumentRoot /opt/intercensor/challenges/$id$name/htdocs
        ServerName $name

        <Location />
            Allow from all
            Order allow,deny
        </Location>
    </VirtualHost>
</Macro>

